<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.android.numbergame.MainActivity">

    <ImageView
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:src="@drawable/add2"
        android:padding="10dp"
        android:background="@color/addition"
        android:onClick="selectLevelAddition"
        android:id="@+id/add_imageView"/>

    <ImageView
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:src="@drawable/sub2"
        android:padding="10dp"
        android:background="@color/subtraction"
        android:onClick="selectLevelSubtraction"
        android:id="@+id/sub_imageView"
        android:layout_toRightOf="@id/add_imageView"/>

    <ImageView
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:padding="10dp"
        android:background="@color/multiplication"
        android:src="@drawable/product2"
        android:onClick="selectLevelMultiplication"
        android:id="@+id/mul_imageView"
        android:layout_marginTop="90dp"/>

    <ImageView
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:src="@drawable/divide2"
        android:padding="10dp"

        android:background="@color/division"
        android:onClick="selectLevelDivision"
        android:id="@+id/div_imageView"
        android:layout_marginTop="90dp"
        android:layout_marginLeft="90dp"/>
</RelativeLayout>
